# Environment Variables for Production Deployment
# Copy this file to .env and update with your values

# JWT Secret (MUST change for production!)
# Generate with: openssl rand -base64 64
JWT_SECRET=RandomSecretKeyForDockerDeployment12345

# MySQL Root Password
MYSQL_ROOT_PASSWORD=root

# MySQL Application User
MYSQL_USER=schooluser
MYSQL_PASSWORD=schoolpass

# MySQL Database
MYSQL_DATABASE=angularschool

# Spring Profile
SPRING_PROFILES_ACTIVE=docker

# Logging Level
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_PRIVATESCHOOL=DEBUG

# JVM Options
JAVA_OPTS=-Xmx512m -Xms256m -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0

# Application Port (internal)
SERVER_PORT=8080